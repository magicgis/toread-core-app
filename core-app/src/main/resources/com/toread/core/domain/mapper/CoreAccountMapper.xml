<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toread.core.domain.mapper.CoreAccountMapper">
	<!-- 基础映射 -->
  <resultMap id="BaseResultMapper" type="com.toread.core.domain.CoreAccount">
    <id column="account_id" jdbcType="INTEGER" property="accountId" />
    <result column="account_code" jdbcType="VARCHAR" property="accountCode" />
    <result column="account_password" jdbcType="VARCHAR" property="accountPassword" />
    <result column="account_enable" jdbcType="INTEGER" property="accountEnable" />
  </resultMap>
  
  <!-- 关联映射 -->
  <resultMap type="CoreAccount" extends="BaseResultMapper" id="OAccountNRoles">
  	<collection property="coreRoles" resultMap="com.toread.core.domain.CoreRoles" />
  </resultMap>
  
  <select id="getAll" resultMap="BaseResultMapper">
  	select * from core_account
  </select>
  
  <select id="selectByCode" resultMap="BaseResultMapper" parameterType="string">
  	select * from core_account where account_code = #{code}
  </select>
  
  <select id="selectRolesByCode" resultMap="OAccountNRoles">
  	select * from `core_account_roles` ac left join `core_account` car 
			on car.`account_id` = ac.`account_id left join `core_roles` ro 
			on ro.`rolse_id` = ac.`rolse_id` 
  </select>
  
</mapper>